@model IEnumerable<FirstWebApp.Models.Product>

@if (Model.Count() == 0)
{
    <h1>No Items available</h1>
}

 
 @foreach(var item in Model)
{
    <p>
       Product Name : @item.Name<a asp-action="Edit" asp-route-id=@item.Id>Edit</a>
       <br />
       Product Price : @item.Price @Html.ActionLink("Delete","Delete",new {id=item.Id});
    </p>
}